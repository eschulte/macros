      // Check that service workers are supported
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.register('/sw.js');
      }
    </script>
    <style>
      .food:hover { color: red; }
      #download {
          position: fixed;
          top: 20px;
          right: 40px;
      }
    </style>
